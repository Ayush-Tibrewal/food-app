<section class="hero">
    <div class="hero-section module">
        <div class="hero-section__content">
            <h4>Welcome to Food <span>Mania</span></h4>
            <p>Fastest <span>Delivery</span> & Easy <span>Pickup</span></p>
            <button class="btn">Order Now</button>
        </div>
        <div class="hero-section__image">
            <img src="/img/hero-image.png" alt="" />
        </div>
    </div>
</section>

<section class="menu module">
    <h1 class="menu-title">All Items</h1>
    <div class="menu-content">

        <% items.forEach(function(item) { %>
            <div class="menu-content__card">
                <img src="/img/<%= item.image %>" alt="" class="card-img">
                <div class="card-content">
                    <h2 class="card-title">
                        <%= item.name %>
                    </h2>
                    <p class="card-text">
                        <%= item.toppings %>
                    </p>
                    <div class="card-bottom">
                        <span class="card-price">Rs.<%= item.price %></span>
                        <button data-item="<%= JSON.stringify(item) %>" class="card-btn">
                            <span>+</span>
                            <span>Add</span>
                        </button>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>
</section>